{  
  "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "outDir": "./build",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,    
      "moduleResolution": "node", /* Lets us find ngviz modules */
      "typeRoots": [
          "./node_modules/@types/",
          "./core/"
      ],
      "allowSyntheticDefaultImports": true,  /* Lets us get types for jquery */
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "dist/**",
      "js/**",
      "docs/**"
  ]
}